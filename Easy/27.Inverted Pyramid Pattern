public class InvertedPyramidPattern {
    public static void main(String[] args) {
        int rows = 3; // You can change this value to adjust the size of the pattern
        for (int i = 0; i < rows; i++) {
            for (int j = 0; j < i; j++) {
                System.out.print(" ");
            }
            for (int j = 0; j < rows - i; j++) {
                System.out.print("*");
            }
            System.out.println();
        }
    }
}
